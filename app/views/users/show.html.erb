<div class="container px-5 px-sm-0">
 <div class="row">
 <div class="col-md-3">
   <%= render 'list1', user: @user %>
 <%= render 'books/list', book: @book %>
 </div>
 <div class="col-md-8 offset-md-1">
  <h2>Books</h2>
 <table class="table table-hover table-inverse">
<thead>
    <tr>
     <th></th>
     <th></th>
     <th>Title</th>
     <th>Opinion</th>
     <th colspan="3"></th>
    </tr>
   </thead>
  <% @books.each do|book| %>
  <tbody>
     <tr>
      <th><%= link_to user_path(@user.id) do %>
          <%= image_tag book.user.get_profile_image(100,100) %></th>

      <% end %>
      <th><%= link_to book_path(book.id) do %>
          <%= book.title %></th>
      <% end %>

      <th><%= book.body %></th>
     </tr>
 <% end %>
 </tbody>
 </table>
</div>
</div>
</div>
