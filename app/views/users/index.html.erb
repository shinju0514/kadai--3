<div class="container px-5 px-sm-0">
 <div class="row">
 <div class="col-md-3">
   <%= render 'list1', user: @user %>
 <%= render 'books/list', book: @book %>
 </div>
 <div class="col-md-8 offset-md-1">
  <h2>Users</h2>
 <table class="table table-hover table-inverse">
  <thead>
    <tr>
     <th>image</th>
     <th>name</th>
     <th colspan="3"></th>
    </tr>
   </thead>
  <tbody>
	     <% @users.each do|user| %>
	     <tr>
	      <div class="image">
	       <th><%= image_tag user.get_profile_image(100,100) %></th>
	      </div>
	       <div class="name">
	        <th><%= user.name %></th>
	       </div>

	       <th><%= link_to "Show", user_path(user.id) %></th>
	     </tr>
    <% end %>
    </tbody>
 </table>
 </div>
 </div>
</div>
