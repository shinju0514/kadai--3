
<div class="container px-5 px-sm-0">
 <div class="row">
 <div class="col-md-3">
 <%= render 'users/list1', user: @user %>
 <%= render 'list', book: @book_new %>
 </div>
 <div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
 <table class="table table-hover table-inverse">
   <thead>
    <tr>
     <th></th>
     <th>Title</th>
     <th>Opinion</th>
     <th colspan="3"></th>
    </tr>
   </thead>
    <tbody>
    	<tr>
    	 <th><%= link_to user_path(@book.user.id) do %>
    	     <%= @user.name %>
    	     <%= image_tag @book.user.get_profile_image(100,100) %></th>
    	     <% end %>
	     <th><%= link_to book_path(@book.id) do %>
	         <%=@book.title %></th>
	         <% end %>
	     <th><%=@book.body %></th>
	     <% if @book.user == current_user %>
	     <th><%= link_to "Edit", edit_book_path(@book.id) %></th>
	     <th><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></th>
	    </tr>
	   <% end %>
	  </tbody>
	 </table>
	</div>
 </div>
</div>