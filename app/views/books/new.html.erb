
<% if @book.errors.any? %>
 <%= @book.errors.count %>error happened
  <ul>
 <% @book.errors.full_messages.each do |message| %>
  <li><%= message %></li>
 <% end %>
  </ul>
<% end %>

<h2>New Book</h2>
 <%= form_with model: @book do |f|%>
  <h5>Title</h5>
   <%= f.text_field :title %>
  <h5>Opinion</h5>
   <%= f.text_area :body %> <br />

  <%= f.submit "Create Book" %>
<% end %>
