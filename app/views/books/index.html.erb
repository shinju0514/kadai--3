<% if @book.errors.any? %>
 <%= @book.errors.count %>error happened
  <ul>
 <% @book.errors.full_messages.each do |message| %>
  <li><%= message %></li>
 <% end %>
  </ul>
<% end %>

<div class="container px-5 px-sm-0">
 <div class="row">
 <div class="col-md-3">
   <%= render 'users/list1', user: @user %>
 <%= render 'list', book: @book %>
 </div>
 <div class="col-md-8 offset-md-1">
  <h2>Books</h2>
 <table class="table table-hover table-inverse">
  <thead>
    <tr>
     <th></th>
     <th>Title</th>
     <th>Opinion</th>
     <th colspan="3"></th>
    </tr>
   </thead>
  <tbody>
	     <% @books.each do|book| %>
	     <tr>
	      <div class="image">
	       <th><%=link_to user_path(book.user.id) do %>
	          <%= image_tag book.user.get_profile_image(100,100) %></th>
	        <% end %>
	      </div>

	       <div class="title">
	        <th><%=link_to book_path(book.id) do %>
	            <%= book.title %></th>
	          <% end %>
	       </div>

	       <div class="body">
	         <th><%= book.body %></th>
	       </div>
	     </tr>
    <% end %>
    </tbody>
 </table>
 </div>
 </div>
</div>
